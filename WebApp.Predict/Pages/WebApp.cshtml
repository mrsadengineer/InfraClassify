@page
@model ImageClassificationInfraClassify.MyWebApp.Pages.WebAppModel

@{
    ViewData["Title"] = "InfraClassify";
}


<main role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">Web App</h1>
            <p>Classify Infrastructure Asset Types. Online Image Classification app for 
                classifying different types of infrastructure assets. Models Trained with ML.NET.</p>
           
        </div>
    </div>

    <div class="container">
     
     <div id="headerDiv"><h2>Upload Image to InfraClassify</h2></div>
<br />

<div class="row">
    <div>
        <form method="post" enctype="multipart/form-data">
            <div>
                <p>Upload a file image using this form to predict its label:</p>
            </div>
            <div>
                <input type="file" name="imageFile">
            </div>
            <div>
                <br />
                <input type="submit" value="Upload File" name="submit">
            </div>

        </form>
    </div>
    <div class="col-md-6">
        @if (ViewBag.Probability != null)
        {
            <h3>Prediction</h3>
            <h6>Predicted Label: @ViewBag.PredictedLabel</h6>
            <h6>Probability: @ViewBag.Probability</h6>
        }
        <div id="divImageId" class="col-md-10"></div>
        <div id="divPrediction" class="col-md-10"></div>
        <div id="divProbability" class="col-md-10"></div>
        <div id="divExecutionTime" class="col-md-10"></div>
    </div>

</div>
    <br />
    <br />
 

        <hr>

    </div> <!-- /container -->

</main>








